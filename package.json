{
    "name": "purrfect-match",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "concurrently \"npm run dev:astro\" \"npm run dev:decap\"",
        "dev:astro": "astro dev",
        "dev:decap": "decap-server",
        "start": "astro dev",
        "build": "rimraf dist && astro check && astro build",
        "preview": "astro preview",
        "astro": "astro",
        "lint": "eslint .",
        "format:check": "prettier --check",
        "prepare": "husky"
    },
    "dependencies": {
        "@astrojs/check": "0.9.4",
        "@astrojs/mdx": "3.1.9",
        "@astrojs/rss": "4.0.9",
        "@astrojs/sitemap": "3.2.1",
        "astro": "4.16.15",
        "decap-cms-app": "3.4.0",
        "react": "18.3.1",
        "react-dom": "18.3.1",
        "sass": "1.85.1",
        "typescript": "5.7.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.6.1",
        "@commitlint/config-conventional": "19.6.0",
        "@schibsted/niche-eslint-config": "0.1.5",
        "concurrently": "9.1.2",
        "decap-server": "3.2.0",
        "eslint-import-resolver-typescript": "4.2.2",
        "eslint-plugin-astro": "1.3.1",
        "husky": "9.1.7",
        "lint-staged": "15.4.1",
        "prettier": "3.5.3",
        "rimraf": "6.0.1"
    },
    "lint-staged": {
        "*.{js,ts,tsx,astro}": [
            "eslint --fix"
        ],
        "*.{json,md,mdx,css,scss,yml}": [
            "prettier --write"
        ]
    }
}
