---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import { type ImageMetadata } from 'astro';
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const { animal } = Astro.params;

function getCollectionName(path) {
    if (path === 'dog') return 'dogs';
    if (path === 'cat') return 'cats';

    return '';
}

const collectionName = getCollectionName(animal);

const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/images/*.{jpeg,jpg,png,gif}');

const posts = (await getCollection(collectionName)).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead description={SITE_DESCRIPTION} title={SITE_TITLE} />
    </head>
    <body>
        <Header />
        <main>
            <section>
                <ul>
                    {
                        posts.map((post) => (
                            <li>
                                <a href={`/${collectionName}/${post.slug}`}>
                                    {post.data.images?.length && (
                                        <Image alt="" src={images[`/src/assets/images/${post.data.images[0]}`]()} />
                                    )}
                                    <h2>{post.data.name}</h2>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </section>
        </main>
        <Footer />
    </body>
</html>
