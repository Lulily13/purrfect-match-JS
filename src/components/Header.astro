---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
    <nav>
        <h2><a href="/">{SITE_TITLE}</a></h2>
        <div class="internal-links">
            <HeaderLink href="/about">O nas</HeaderLink>
            <HeaderLink href="/dog">Podopieczni</HeaderLink>
            <HeaderLink href="/howToHelp">Jak pom√≥c?</HeaderLink>
            <HeaderLink href="/contact">Kontakt</HeaderLink>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0 1em;
        background: #f9b7a2;
        box-shadow: 0 2px 8px rgba(var(--black), 5%);
        width: 100%;
        background-color: $primary;
        top: 0;
        left: 0;
        position: sticky;
    }
    h2 {
        margin: 0;
        font-size: 1em;
    }

    h2 a,
    h2 a.active {
        text-decoration: none;
    }
    nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 3em;
    }
    nav a {
        padding: 1em 0.5em;
        color: #4a4a4a;
        border-bottom: 4px solid transparent;
        text-decoration: none;
    }
    nav a.active {
        text-decoration: none;
        border-bottom-color: #4a4a4a;
    }
</style>
